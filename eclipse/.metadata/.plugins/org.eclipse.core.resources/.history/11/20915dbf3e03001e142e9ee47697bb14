package appu26j.mods.visuals;

import java.util.ArrayList;

import com.google.common.eventbus.Subscribe;

import appu26j.events.entity.EventTick;
import appu26j.interfaces.ModInterface;
import appu26j.mods.Category;
import appu26j.mods.Mod;
import net.minecraft.entity.Entity;

@ModInterface(name = "Performance", description = "Improves FPS.", category = Category.VISUALS)
public class Performance extends Mod
{
    private ArrayList<Entity> entities = new ArrayList<>();
    
    @Subscribe
    public void onTick(EventTick e)
    {
        ArrayList<Entity> removeQueue = new ArrayList<>();
        
        for (Entity entity : this.mc.theWorld.loadedEntityList)
        {
            if (!this.mc.thePlayer.canEntityBeSeen(entity) && !this.entities.contains(entity))
            {
                System.out.println(true);
                removeQueue.add(entity);
            }
        }
        
        System.out.println(removeQueue);
        for (Entity entity : removeQueue)
        {
            this.entities.add(entity);
            this.mc.theWorld.removeEntityFromWorld(entity.getEntityId());
        }
        
    }
}
